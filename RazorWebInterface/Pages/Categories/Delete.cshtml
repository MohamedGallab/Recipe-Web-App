@page "{category}"
@model RazorWebInterface.Pages.Categories.DeleteModel
@{
	ViewData["Title"] = "Delete";
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
	<dl class="row">
		<dt class="col-sm-2">
			Category
		</dt>
		<dd class="col-sm-10">
			@Model.Category
		</dd>
	</dl>

	<form method="post">
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-page="./Index">Back to List</a>
	</form>
</div>