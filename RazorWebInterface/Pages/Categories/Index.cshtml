@page
@model RazorWebInterface.Pages.Categories.IndexModel
@{
	ViewData["Title"] = "Categories";
}
<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
	<thead>
		<tr>
			<th scope="col">Title</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var category in Model.CategoryList)
		{
			<tr>
				<th scope="row">@category</th>
				<td>
                    <a asp-page="./Edit" asp-route-category="@category">Edit</a> |
                    <a asp-page="./Delete" asp-route-category="@category">Delete</a>
                </td>
			</tr>
		}
	</tbody>
</table>