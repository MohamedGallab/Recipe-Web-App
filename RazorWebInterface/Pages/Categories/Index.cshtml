@page
@model RazorWebInterface.Pages.Categories.IndexModel
@{
	ViewData["Title"] = "Categories";
}
<div class="container d-flex justify-content-between align-items-center my-4">
	<h2>All Categories</h2>
	<a class="btn btn-primary h-25" asp-page="Create">Create New</a>
</div>

<div class="row row-cols-6 g-4">
	@foreach (var category in Model.CategoryList)
	{
		<div class="col">
			<div class="card text-center">
				<div class="card-body">
					<h5 class="card-title">@category</h5>
					<div class="btn-group">
						<a class="btn btn-primary" asp-page="./Edit" asp-route-category="@category">Edit</a>
						<a class="btn btn-danger" asp-page="./Delete" asp-route-category="@category">Delete</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>