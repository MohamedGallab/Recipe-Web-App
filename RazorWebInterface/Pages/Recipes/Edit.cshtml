@page "{category}"
@model RazorWebInterface.Pages.Recipes.EditModel
@{
	ViewData["Title"] = "Edit";
}

<h2 class="my-4">Edit A Category</h2>

<form method="post">
	<div class="my-3 row">
		<label asp-for="@Model.NewCategory" class="col-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="@Model.NewCategory" class="form-control" />
		</div>
		<span asp-validation-for="@Model.NewCategory" class="text-danger"></span>
	</div>
	<div class="btn-group float-end">
		<input type="submit" value="Edit" class="btn btn-primary" />
		<a class="btn btn-secondary" asp-page="Index">Back to List</a>
	</div>
</form>